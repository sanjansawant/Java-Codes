<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<DialogPane fx:controller="com.company.DialogController"
            xmlns:fx="http://javafx.com/fxml">

    <headerText>
        WE PUT INSTRUCTIONS HERE
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description: " GridPane.columnIndex="0" GridPane.rowIndex="0"></Label>
            <TextField fx:id="textField" GridPane.columnIndex="1" GridPane.rowIndex="0"></TextField>
            <Label text="Details: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="textArea" GridPane.columnIndex="1" GridPane.rowIndex="1" wrapText="true"/>
            <Label text="Due: " GridPane.columnIndex="0" GridPane.rowIndex="2"></Label>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>
        </GridPane>

    </content>
</DialogPane>