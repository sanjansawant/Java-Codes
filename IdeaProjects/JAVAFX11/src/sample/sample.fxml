<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="fieldName" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#handsButton"></TextField>
    <Button fx:id="helloButton" text ="sayHello" GridPane.columnIndex="0" GridPane.rowIndex="1" onAction="#buttonPressed"></Button>
    <Button fx:id="byeButton" text="sayBye" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#buttonPressed"></Button>

    <CheckBox fx:id="checked" text="Clear the data" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" onAction="#handleClearing"></CheckBox>


    <Label fx:id="ourLabel" text="this is a label" GridPane.columnIndex="0" GridPane.rowIndex="3"></Label>
</GridPane>